# Production Environment Configuration
# Replace all values with your actual credentials

# Server Configuration
NODE_ENV=production
PORT=5001

# Database (MongoDB Atlas - REQUIRED)
DATABASE_CLOUD=mongodb+srv://username:password@cluster.mongodb.net/travelagency?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret)
JWT_SECRET=your-super-strong-jwt-secret-at-least-32-characters-long

# Google Maps API (REQUIRED for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Cloudinary (REQUIRED for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for contact forms)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Scraping Configuration
SCRAPING_BATCH_SIZE=50
SCRAPING_DELAY=2000
MAX_RETRIES=3
ENABLE_AUTOMATED_SCRAPING=true

# Frontend URL (for CORS)
FRONTEND_URL=http://YOUR_DOMAIN_OR_IP:5001
